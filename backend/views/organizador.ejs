<!DOCTYPE html>
<html>
    <head>
        <link href="/css/menu_general.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="/css/header.css" />
        <link href="https://fonts.googleapis.com/css2?family=Train+One&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <link href="/styles/bootstrap.css" rel="stylesheet" type="text/css" />
        <script src="js/bootstrap.bundle.js"></script>
    </head>

    <body class="container">
        <%- include('header') %>
        <h2>Lista de Torneos</h1>
        <a href="/vista_organizador/add" id="but_agregar" class="btn btn-success mb-3" type="button">Crear nuevo torneo</a>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script src="js/paginacion.js"></script>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Fecha de inicio</th>
                    <th>Fecha de fin</th>
                    <th>NÃºmero de participantes</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="myTable">
                <% torneos.forEach((tn) => { %>
                    <tr>
                        <td><%= tn.id %></td>
                        <td><%= tn.nombre %></td>
                        <td><%= tn.fecha_inicio %></td>
                        <td><%= tn.fecha_fin %></td>
                        <td><%= tn.nro_participantes %></td>
                        <td>
                            <a href="/vista_organizador/edit/<%= tn.id %>">Editar</a>
                            <a href="">Organizar</a>
                            <a href="/vista_organizador/delete/<%= tn.id %>">Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <ul id="myPager"></ul>
        <a class="btn btn-success" href="/">Regresar</a>
    </body>
</html>